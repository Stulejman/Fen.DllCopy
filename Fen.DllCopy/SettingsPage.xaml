<Window x:Class="Fen.DllCopy.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="400" Height="150"
             mc:Ignorable="d" ResizeMode="NoResize">
    <StackPanel  >
        <TextBlock Margin="5" Text="Select directory with projects: " VerticalAlignment="Center"/>
        <DockPanel HorizontalAlignment="Stretch">
            <Button Margin="5" Name="BrowseFrom" Padding="5" DockPanel.Dock="Right" Content="Browse" Click="BrowseClick" />
            <TextBox Margin="5" Name="ProjectDir" />
        </DockPanel>
        <StackPanel HorizontalAlignment="Right">
            <Button Margin="5" Name="Save" Padding="5" Content="Save" Click="SaveClick"></Button>
        </StackPanel>
    </StackPanel>
</Window>
